<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.nico.quoted.ui.controller.SourceTableViewController">
   <children>
      <VBox prefHeight="200.0" prefWidth="100.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <TableView fx:id="sourceTableView" prefHeight="348.0" prefWidth="600.0">
              <columns>
                <TableColumn fx:id="typeColumn" maxWidth="1500.0" minWidth="50.0" prefWidth="75.0" text="Type" />
                <TableColumn fx:id="titleColumn" minWidth="200.0" prefWidth="222.0" text="Title" />
                <TableColumn fx:id="originColumn" prefWidth="71.0" text="Author/URL" />
                <TableColumn fx:id="editButtonColumn" prefWidth="276.0" text="Edit" />
                  <TableColumn fx:id="deleteButtonColumn" prefWidth="75.0" text="Delete" />
              </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
            <HBox prefHeight="40.0" prefWidth="200.0">
               <children>
                  <Button fx:id="addBookButton" mnemonicParsing="false" onAction="#onAddBookButtonClick" text="Add Book">
                     <HBox.margin>
                        <Insets left="10.0" right="10.0" />
                     </HBox.margin>
                  </Button>
                  <TextField fx:id="searchTextField" text="Search...">
                     <HBox.margin>
                        <Insets left="10.0" right="10.0" />
                     </HBox.margin>
                  </TextField>
               </children>
               <VBox.margin>
                  <Insets left="10.0" right="10.0" />
               </VBox.margin>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
